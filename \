'use client';

import { useRouter } from 'next/navigation';

export default function SimonGameRules() {
  const router = useRouter();

  const handleStartGame = () => {
    router.push('/simon'); // Redirect to the actual Simon game
  };

  return (
    <div className="min-h-screen flex flex-col items-center justify-center bg-gray-100 p-4">
      <div className="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl">
        <h1 className="text-3xl font-bold mb-6 text-center">Simon Game Rules</h1>
        <div className="text-left text-lg space-y-4">
          <h2 className="font-bold">1. Objective:</h2>
          <p>
            The goal of the Simon Game is to memorize and repeat the sequence of colors displayed. Each round, the sequence will get longer, making it more challenging to remember.
          </p>

          <h2 className="font-bold">2. How to Play:</h2>
          <ol className="list-decimal list-inside">
            <li>Press the "Start Game" button to begin.</li>
            <li>Watch as the game highlights a sequence of colors. Pay close attention to the order.</li>
            <li>Once the sequence ends, it's your turn to repeat the sequence by clicking the corresponding buttons.</li>
            <li>If you match the sequence correctly, a new color will be added to the sequence, and the game continues.</li>
            <li>If you click the wrong color, the game ends.</li>
          </ol>

          <h2 className="font-bold">3. Scoring:</h2>
          <p>
            Your score is determined by the length of the sequence you successfully repeat. Each correct sequence adds one point to your score.
          </p>

          <h2 className="font-bold">4. Controls:</h2>
          <p>
            Use your mouse or touchpad to click the colored buttons. Each button corresponds to one color in the sequence.
          </p>

          <h2 className="font-bold">5. Tips:</h2>
          <ul className="list-disc list-inside">
            <li>Focus on the sequence and try to memorize the order visually and mentally.</li>
            <li>Take your time when repeating the sequence, but remember that the game only waits for a short period.</li>
          </ul>
        </div>
        <button
          onClick={handleStartGame}
          className="mt-8 w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Start Game
        </button>
      </div>
    </div>
  );
}

